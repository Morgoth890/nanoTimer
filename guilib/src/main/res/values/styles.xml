<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">26px</item>
  </style>

  <style name="SimpleTextField">
    <item name="android:textSize">26px</item>
  </style>

  <style name="SmallTextField">
    <item name="android:textSize">21px</item>
  </style>

  <style name="SolveStepTextField" parent="ScrambleTextField">
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0px</item>
    <item name="android:layout_marginLeft">2px</item>
    <item name="android:layout_marginRight">2px</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="TableCell">
    <item name="android:textSize">21px</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">31px</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_margin">2px</item>
    <item name="android:background">@drawable/table_cell</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="AverageTableHeaderField" parent="TableCell">
    <item name="android:textColor">@color/lightblue</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="AverageTableFirstField" parent="AverageTableHeaderField">
    <item name="android:layout_width">40px</item>
  </style>

  <style name="ListViewItem">
    <item name="android:textSize">26px</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">6px</item>
    <item name="android:layout_marginBottom">6px</item>
    <item name="android:singleLine">true</item>
    <item name="android:padding">3px</item>
  </style>

  <style name="SmallListViewItem">
    <item name="android:textSize">22px</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">9px</item>
  </style>

  <style name="SpinnerTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxLines">1</item>
    <item name="android:textSize">18sp</item>
    <item name="android:gravity">start</item>
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:ellipsize">marquee</item>
  </style>

  <style name="CustomButton" parent="Widget.AppCompat.Button.Colored">
    <item name="android:layout_width">match_parent</item>
    <!--<item name="android:layout_height">48px</item>-->
    <item name="android:layout_height">wrap_content</item>
    <!--<item name="android:paddingLeft">1dp</item>-->
    <!--<item name="android:paddingRight">1dp</item>-->
    <!--<item name="android:textColor">@color/white</item>-->
    <!--<item name="android:background">@drawable/button_custom</item>-->
    <!--<item name="colorButtonNormal">@color/red</item>-->
    <item name="android:gravity">center</item>
    <item name="android:textSize">24px</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:singleLine">true</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="CustomSpinner">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">2px</item>
    <item name="android:paddingRight">2px</item>
    <item name="android:gravity">center</item>
    <item name="android:singleLine">true</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="MenuButton">
    <item name="android:textSize">22px</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <!--<item name="android:layout_height">50px</item>-->
    <item name="android:padding">3px</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/button_custom</item>
    <item name="android:gravity">center</item>
    <item name="android:singleLine">true</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="ScrambleTextField">
    <item name="android:textSize">18px</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="DividerRow">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">3px</item>
    <item name="android:background">@color/iceblue</item>
  </style>

  <style name="NumericWheelView">
    <item name="android:layout_width">55dp</item>
    <item name="android:layout_height">80dp</item>
  </style>

  <style name="NumericEditText">
    <item name="android:inputType">number</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">20sp</item>
  </style>

</resources>