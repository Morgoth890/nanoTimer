<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="wrap_content">

  <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:padding="6dp">

    <TextView
       android:id="@+id/tvSolveType"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toLeftOf="@+id/tvAdditionalInfo"
       android:layout_centerVertical="true"
       android:layout_alignParentLeft="true"
       android:singleLine="true"
       style="@style/SimpleTextField"/>

    <TextView
       android:id="@+id/tvAdditionalInfo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toLeftOf="@+id/imgMove"
       android:layout_centerVertical="true"
       android:singleLine="true"
       android:layout_marginLeft="6dp"
       android:layout_marginRight="6dp"
       style="@style/SmallTextField"/>

    <ImageView
       android:id="@+id/imgMove"
       android:src="@drawable/listmove"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_centerVertical="true"
       android:layout_alignParentRight="true"
       android:focusable="false"/>

  </RelativeLayout>

</LinearLayout>