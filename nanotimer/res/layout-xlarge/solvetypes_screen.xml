<?xml version="1.0" encoding="utf-8"?>

<com.cube.nanotimer.util.view.ScalingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:dslv="http://schemas.android.com/apk/res/com.cube.nanotimer"
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

  <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="47px"
     android:background="@color/darkblue"
     android:padding="4px">

    <Button
       android:id="@+id/buAdd"
       android:text="@string/add_solvetype"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:textSize="20px"
       android:paddingLeft="12px"
       android:paddingRight="12px"
       style="@style/CustomButton"/>

    <TextView
       android:id="@+id/tvCubeType"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:layout_alignParentRight="true"
       android:layout_marginRight="13px"
       android:textSize="22px"
       android:gravity="center_vertical"
       android:textStyle="bold"
       android:singleLine="true"/>

  </RelativeLayout>

  <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="3px"
     android:background="@color/neon"/>

  <com.mobeta.android.dslv.DragSortListView
     android:id="@+id/lvSolveTypes"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:longClickable="true"
     android:layout_marginTop="4px"
     android:layout_marginLeft="7px"
     android:layout_marginRight="7px"
     style="@style/DividerListView"
     dslv:drag_handle_id="@drawable/listmove"
     dslv:drag_enabled="true"
     dslv:drag_scroll_start="0.33"
     dslv:drag_start_mode="onMove"
     dslv:float_alpha="0.6"
     dslv:max_drag_scroll_speed="0.5"
     dslv:remove_enabled="true"
     dslv:sort_enabled="true"
     dslv:track_drag_sort="false"
     dslv:use_default_controller="true"/>

</com.cube.nanotimer.util.view.ScalingLinearLayout>