<?xml version="1.0" encoding="utf-8"?>

<com.cube.nanotimer.util.view.ScalingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="wrap_content">

  <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:padding="8px">

    <TextView
       android:id="@+id/tvSolveType"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toLeftOf="@+id/tvStepsCount"
       android:layout_centerVertical="true"
       android:layout_alignParentLeft="true"
       android:singleLine="true"
       android:textSize="22px"/>

    <TextView
       android:id="@+id/tvStepsCount"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toLeftOf="@+id/imgMove"
       android:layout_centerVertical="true"
       android:singleLine="true"
       android:layout_marginLeft="8px"
       android:layout_marginRight="8px"
       style="@style/SmallTextField"/>

    <ImageView
       android:id="@+id/imgMove"
       android:src="@drawable/listmove"
       android:layout_width="36px"
       android:layout_height="36px"
       android:layout_centerVertical="true"
       android:layout_alignParentRight="true"
       android:focusable="false"/>

  </RelativeLayout>

</com.cube.nanotimer.util.view.ScalingLinearLayout>