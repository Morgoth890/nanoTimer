<?xml version="1.0" encoding="utf-8"?>

<com.cube.nanotimer.util.view.ScalingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/mainLayout"
   android:layout_height="match_parent"
   android:layout_width="match_parent"
   android:orientation="vertical"
   android:background="@color/graybg">

  <com.startapp.android.publish.banner.Banner
     android:id="@+id/bannerAd"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center"/>

  <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="6px">

    <TableLayout
       android:id="@+id/layoutTypes"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:stretchColumns="1"
       android:layout_alignParentTop="true">
      <TableRow>
        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/cube_type"
           android:textSize="24px"
           style="@style/SimpleTextField"/>
        <Button
           android:id="@+id/buCubeType"
           android:layout_marginLeft="15px"
           android:layout_height="40px"
           android:textSize="20px"
           style="@style/CustomButton"/>
      </TableRow>
      <TableRow android:layout_marginTop="6px">
        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/solve_type"
           android:textSize="24px"
           style="@style/SimpleTextField"/>
        <Button
           android:id="@+id/buSolveType"
           android:layout_marginLeft="15px"
           android:layout_height="40px"
           android:textSize="20px"
           style="@style/CustomButton"/>
      </TableRow>
    </TableLayout>

    <LinearLayout
       android:id="@+id/layoutHistory"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_marginTop="6px"
       android:layout_marginBottom="6px"
       android:padding="12px"
       android:background="@drawable/layout_border"
       android:layout_below="@id/layoutTypes"
       android:layout_above="@+id/buStart">
      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <TextView
           android:id="@+id/tvHistory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/history"
           android:layout_marginBottom="3px"
           android:layout_alignParentStart="true"
           android:layout_alignParentLeft="true"
           android:textSize="25px"/>
        <TextView
           android:id="@+id/tvSolvesCount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="4px"
           android:layout_marginRight="4px"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"
           android:layout_alignBottom="@+id/tvHistory"
           android:textSize="18px"/>
      </RelativeLayout>
      <ListView
         android:id="@+id/lvHistory"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:alwaysDrawnWithCache="false"/>
    </LinearLayout>

    <Button
       android:id="@+id/buStart"
       android:text="@string/start"
       android:layout_alignParentBottom="true"
       android:layout_height="40px"
       android:textSize="20px"
       style="@style/CustomButton"/>

  </RelativeLayout>

</com.cube.nanotimer.util.view.ScalingLinearLayout>
