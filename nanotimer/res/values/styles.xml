<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="SimpleTextField">
    <item name="android:textSize">30px</item>
  </style>

  <style name="SmallTextField">
    <item name="android:textSize">21px</item>
  </style>

  <style name="SolveStepTextField">
    <item name="android:textSize">30px</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0px</item>
    <item name="android:layout_marginLeft">5px</item>
    <item name="android:layout_marginRight">5px</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="SessionTimeTextField">
    <item name="android:textSize">21px</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">0px</item>
    <item name="borderColor">@color/neon</item>
    <item name="border">1</item>
  </style>

  <style name="AverageTableHeaderField">
    <item name="android:textSize">21px</item>
    <item name="android:gravity">center</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@color/darkblue</item>
    <item name="borderColor">@color/neon</item>
    <item name="border">1</item>
  </style>

  <style name="AverageTableTextField">
    <item name="android:textSize">21px</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingLeft">2px</item>
    <item name="android:paddingRight">2px</item>
    <item name="borderColor">@color/neon</item>
    <item name="border">1</item>
  </style>

  <style name="ListViewItem">
    <item name="android:textSize">34px</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">15px</item>
    <item name="android:layout_marginBottom">15px</item>
    <item name="android:padding">15px</item>
  </style>

  <style name="SmallListViewItem">
    <item name="android:textSize">27px</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">9px</item>
  </style>

  <style name="CustomButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">52px</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/button_custom</item>
    <item name="android:textSize">24px</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="MenuButton">
    <item name="android:textSize">30px</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@drawable/layout_border</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_margin">2px</item>
  </style>

  <style name="ScrambleTextField">
    <item name="android:textSize">18px</item>
    <item name="android:gravity">center</item>
  </style>

</resources>