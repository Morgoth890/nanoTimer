<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="SimpleTextField">
    <item name="android:textSize">26px</item>
  </style>

  <style name="SmallTextField">
    <item name="android:textSize">21px</item>
  </style>

  <style name="SolveStepTextField">
    <item name="android:textSize">27px</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0px</item>
    <item name="android:layout_marginLeft">2px</item>
    <item name="android:layout_marginRight">2px</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="TableCell">
    <item name="android:textSize">21px</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">32px</item>
    <item name="android:layout_width">0px</item>
    <item name="android:layout_margin">2px</item>
    <item name="android:background">@drawable/table_cell</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="AverageTableHeaderField" parent="TableCell">
    <item name="android:textColor">@color/lightblue</item>
    <!--<item name="android:background">@color/gray850</item>-->
    <item name="android:textStyle">bold</item>
  </style>

  <style name="ListViewItem">
    <item name="android:textSize">30px</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">8px</item>
    <item name="android:layout_marginBottom">8px</item>
    <item name="android:padding">3px</item>
  </style>

  <style name="SmallListViewItem">
    <item name="android:textSize">24px</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">9px</item>
  </style>

  <style name="CustomButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48px</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/button_custom</item>
    <item name="android:textSize">24px</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="MenuButton">
    <item name="android:textSize">22px</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">50px</item>
    <item name="android:padding">3px</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/button_custom</item>
    <item name="android:gravity">center</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="ScrambleTextField">
    <item name="android:textSize">18px</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="DividerRow">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">3px</item>
    <item name="android:background">@color/iceblue</item>
  </style>

</resources>